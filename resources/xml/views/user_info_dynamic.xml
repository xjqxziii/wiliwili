<brls:Box
        width="auto"
        height="auto"
        axis="row"
        alignItems="center">

    <brls:Rectangle
            id="notice"
            width="8"
            height="8"
            cornerRadius="8"
            marginLeft="10"
            visibility="invisible"
            color="@theme/color/tip/red"/>

    <brls:Image
            id="avatar"
            width="40"
            height="40"
            scalingType="fit"
            marginLeft="10"
            marginRight="10"
            cornerRadius="100"
            image="@res/pictures/default_avatar.png"/>

    <brls:Label
            id="username"
            grow="1"
            width="auto"
            height="auto"
            singleLine="true"
            fontSize="18"
            text="username"/>

</brls:Box>
<brls:Box
        highlightCornerRadius="8"
        axis="column"
        width="auto"
        height="auto">
    <brls:Box
            id="video/card/pic_box"
            axis="row"
            width="100%"
            height="84%">
        <brls:Image
                id="video/card/picture"
                scalingType="fill"
                width="100%"
                height="100%"
                image="@res/pictures/video-card-bg.png"
                cornerRadius="4"/>

        <brls:Image
                id="video/card/badge/top"
                positionType="absolute"
                positionTop="8"
                positionRight="0"
                scalingType="fit"
                height="24"/>

        <brls:Box
                id="video/card/badge/box/bottom"
                positionBottom="0"
                positionType="absolute"
                background="vertical_linear"
                paddingLeft="10"
                paddingRight="10"
                width="100%"
                height="10%"
                alignItems="center">
            <brls:Image
                    id="video/card/badge/bottom/left"
                    scalingType="fit"
                    height="16"/>
            <brls:Label
                    id="video/card/label/duration"
                    positionType="absolute"
                    positionRight="4"
                    textColor="#FFFFFF"
                    fontSize="16"/>
        </brls:Box>

    </brls:Box>

    <brls:Box
            margin="10"
            axis="column">
        <TextBox
                marginBottom="0"
                wireframe="false"
                id="video/card/label/title"
                fontSize="20"
                lineHeight="1.5"
                maxRows="1"
                width="100%"
                height="30"/>
        <brls:Box
                grow="1"
                width="100%"
                alignItems="center">
            <brls:Label
                    wireframe="false"
                    id="video/card/label/username"
                    fontSize="16"
                    singleLine="true"
                    textColor="@theme/font/grey"
                    width="100%"
                    height="100%"/>
        </brls:Box>
    </brls:Box>
</brls:Box>
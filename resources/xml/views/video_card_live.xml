<brls:Box
        wireframe="false"
        highlightCornerRadius="8"
        axis="column"
        width="auto"
        height="auto">
    <brls:Box
            id="video/card/pic_box"
            width="100%"
            height="68%">
        <brls:Image
                id="video/card/picture"
                scalingType="fill"
                height="100%"
                width="100%"
                image="@res/pictures/video-card-bg.png"
                cornerRadius="4"/>

        <brls:Box
                positionBottom="0"
                positionType="absolute"
                background="vertical_linear"
                paddingLeft="10"
                paddingRight="10"
                width="100%"
                height="20%"
                alignItems="center">
            <SVGImage
                    width="18"
                    height="18"
                    marginTop="-1"
                    SVG="@res/svg/widget-people.svg"/>
            <brls:Label
                    marginLeft="4"
                    marginRight="4"
                    textColor="#FFFFFF"
                    id="video/card/label/count"
                    fontSize="16"/>
            <brls:Label
                    id="video/card/label/duration"
                    positionType="absolute"
                    positionRight="10"
                    textColor="#FFFFFF"
                    fontSize="16"/>
        </brls:Box>

    </brls:Box>
    <brls:Box
            margin="10"
            axis="column">
        <TextBox
                marginBottom="0"
                wireframe="false"
                id="video/card/label/title"
                fontSize="20"
                lineHeight="1.5"
                maxRows="1"
                width="100%"
                height="30"/>
        <brls:Box
                grow="1"
                width="100%"
                wireframe="false"
                alignItems="center">
            <brls:Box
                    id="video/card/hint"
                    height="18"
                    marginTop="2"
                    shrink="0"
                    backgroundColor="@theme/color/yellow_1"
                    cornerRadius="4"
                    justifyContent="center"
                    alignItems="center">
                <brls:Label
                        fontSize="13"
                        text="已关注"
                        margin="2"
                        horizontalAlign="center"
                        textColor="@theme/font/yellow_1"/>
            </brls:Box>
            <SVGImage
                    wireframe="false"
                    id="video/svg/up"
                    height="14"
                    SVG="@res/svg/widget-up.svg"/>
            <brls:Label
                    wireframe="false"
                    id="video/card/label/username"
                    marginLeft="4"
                    fontSize="16"
                    singleLine="true"
                    textColor="@theme/font/grey"
                    height="100%"/>
        </brls:Box>
    </brls:Box>
</brls:Box>
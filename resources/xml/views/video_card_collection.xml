<brls:Box
        marginTop="14"
        wireframe="false"
        highlightCornerRadius="8"
        axis="column"
        width="auto"
        height="auto">
    <brls:Box
            id="video/card/pic_box"
            width="100%"
            height="70%">
        <brls:Box
                positionType="absolute"
                positionTop="-14"
                positionLeft="9%"
                width="82%"
                backgroundColor="#E0E0E0"
                cornerRadius="6"
                height="12">
        </brls:Box>
        <brls:Box
                positionType="absolute"
                positionTop="-8"
                positionLeft="5%"
                width="90%"
                backgroundColor="#C0C0C0"
                cornerRadius="8"
                height="16">
        </brls:Box>
        <brls:Image
                id="video/card/picture"
                scalingType="fill"
                height="100%"
                width="100%"
                image="@res/pictures/video-card-bg.png"
                cornerRadius="4"/>

        <brls:Box
                positionBottom="0"
                positionType="absolute"
                background="vertical_linear"
                paddingLeft="10"
                paddingRight="10"
                width="100%"
                height="20%"
                alignItems="center">
            <brls:Label
                    marginLeft="4"
                    marginRight="4"
                    textColor="#FFFFFF"
                    id="video/card/label/count"
                    fontSize="16"
                    text=""/>
            <brls:Label
                    id="video/card/label/duration"
                    positionType="absolute"
                    positionRight="10"
                    textColor="#FFFFFF"
                    fontSize="16"/>
        </brls:Box>

    </brls:Box>
    <brls:Box
            marginTop="10"
            marginLeft="4"
            marginRight="4"
            marginBottom="10"
            axis="column">
        <TextBox
                marginBottom="0"
                id="video/card/label/title"
                fontSize="20"
                lineHeight="1.5"
                maxRows="1"
                width="100%"
                height="30"/>
        <brls:Box
                grow="1"
                width="100%"
                alignItems="center">
            <brls:Label
                    id="video/card/label/username"
                    fontSize="16"
                    singleLine="true"
                    textColor="@theme/font/grey"
                    width="100%"
                    height="100%"/>
        </brls:Box>
    </brls:Box>
</brls:Box>
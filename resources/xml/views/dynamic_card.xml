<brls:Box
        wireframe="false"
        highlightCornerRadius="8"
        cornerRadius="8"
        backgroundColor="@theme/color/grey_1"
        alignItems="center"
        axis="column"
        width="auto"
        height="auto">

    <!--作者-->
    <brls:Box
            marginLeft="30"
            marginTop="10"
            marginBottom="10"
            width="100%"
            height="60">
        <UserInfoView
                height="60"
                mainTextColor="@theme/color/bilibili"
                id="dynamic/author"/>
    </brls:Box>

    <!--警告-->
    <brls:Box
            id="dynamic/dispute_box"
            width="100%"
            paddingBottom="10"
            paddingLeft="30"
            paddingRight="30">
        <brls:Box
                grow="1"
                backgroundColor="@theme/color/yellow_1"
                cornerRadius="4"
                alignItems="center"
                height="24">
            <SVGImage
                    height="16"
                    width="16"
                    marginLeft="8"
                    marginTop="4"
                    SVG="@res/svg/bili-dyn-dispute.svg"/>
            <brls:Label
                    id="dynamic/dispute"
                    fontSize="16"
                    marginLeft="4"
                    textColor="@theme/font/yellow_1"/>
        </brls:Box>
    </brls:Box>

    <!--话题-->
    <brls:Box
            id="dynamic/topic_box"
            width="100%"
            paddingBottom="10"
            paddingLeft="30"
            paddingRight="30">
        <SVGImage
                height="16"
                width="16"
                SVG="@res/svg/bili-dyn-topic.svg"/>
        <brls:Label
                id="dynamic/topic"
                fontSize="16"
                marginLeft="4"
                textColor="@theme/color/link"/>
    </brls:Box>

    <!--文本-->
    <brls:Box
            id="dynamic/content_box"
            axis="column"
            grow="1"
            paddingBottom="10"
            paddingLeft="30"
            paddingRight="30">
        <TextBox
                id="dynamic/content"
                lineHeight="1.5"
                grow="1"
                maxRows="4"
                showMore="true"
                width="100%"/>
    </brls:Box>

    <!--图片-->
    <brls:Box
            id="dynamic/image_box"
            axis="column"
            grow="1"
            paddingTop="4"
            paddingBottom="10"
            paddingLeft="30"
            paddingRight="30">
        <TextBox
                id="dynamic/image"
                lineHeight="1.5"
                grow="1"
                maxRows="5"
                showMore="true"
                width="100%"/>
    </brls:Box>

    <!--视频-->
    <DynamicVideoCardView
            id="dynamic/video_box"
            width="90%"
            height="auto"/>

    <!--转发的动态-->
    <brls:Box
            id="dynamic/forward_box"
            backgroundColor="@theme/brls/background"
            cornerRadius="8"
            alignItems="center"
            axis="column"
            height="auto"
            width="90%">

        <!--转发作者-->
        <brls:Box
                marginLeft="30"
                marginTop="4"
                marginBottom="4"
                width="100%"
                height="24">
            <brls:Label
                    id="dynamic/author/forward"
                    fontSize="16"
                    textColor="@theme/color/link"/>
        </brls:Box>

        <!--警告-->
        <brls:Box
                id="dynamic/dispute_box/forward"
                width="100%"
                paddingBottom="10"
                paddingLeft="30"
                paddingRight="30">
            <brls:Box
                    grow="1"
                    backgroundColor="@theme/color/yellow_1"
                    cornerRadius="4"
                    alignItems="center"
                    height="24">
                <SVGImage
                        height="16"
                        width="16"
                        marginLeft="8"
                        marginTop="4"
                        SVG="@res/svg/bili-dyn-dispute.svg"/>
                <brls:Label
                        id="dynamic/dispute/forward"
                        fontSize="16"
                        marginLeft="4"
                        textColor="@theme/font/yellow_1"/>
            </brls:Box>
        </brls:Box>

        <!--话题-->
        <brls:Box
                id="dynamic/topic_box/forward"
                width="100%"
                paddingBottom="10"
                paddingLeft="30"
                paddingRight="30">
            <SVGImage
                    height="16"
                    width="16"
                    SVG="@res/svg/bili-dyn-topic.svg"/>
            <brls:Label
                    id="dynamic/topic/forward"
                    fontSize="16"
                    marginLeft="4"
                    textColor="@theme/color/link"/>
        </brls:Box>

        <!--转发文本-->
        <brls:Box
                id="dynamic/content_box/forward"
                axis="column"
                grow="1"
                paddingBottom="10"
                paddingLeft="30"
                paddingRight="30">
            <TextBox
                    id="dynamic/content/forward"
                    lineHeight="1.5"
                    grow="1"
                    maxRows="2"
                    showMore="true"
                    fontSize="16"
                    width="100%"/>
        </brls:Box>

        <!--转发图片-->
        <brls:Box
                id="dynamic/image_box/forward"
                axis="column"
                grow="1"
                paddingTop="4"
                paddingBottom="10"
                paddingLeft="30"
                paddingRight="30">
            <TextBox
                    id="dynamic/image/forward"
                    lineHeight="1.5"
                    grow="1"
                    maxRows="5"
                    showMore="true"
                    width="100%"/>
        </brls:Box>

        <!--转发视频-->
        <DynamicVideoCardView
                id="dynamic/video_box/forward"
                width="90%"
                height="auto"
                marginBottom="10"/>

    </brls:Box>

    <!--转评赞-->
    <brls:Box
            justifyContent="spaceEvenly"
            alignItems="center"
            width="100%"
            height="40">
        <brls:Box>
            <SVGImage
                    id="comment/svg/forward"
                    height="20"
                    width="20"
                    SVG="@res/svg/comment-forward-grey.svg"/>
            <brls:Label
                    id="comment/label/forward"
                    marginLeft="4"
                    minWidth="48"
                    textColor="@theme/font/grey"
                    fontSize="16"/>
        </brls:Box>

        <brls:Box>
            <SVGImage
                    id="comment/svg/reply"
                    width="24"
                    height="24"
                    SVG="@res/svg/comment-replay-grey.svg"/>
            <brls:Label
                    id="comment/label/reply"
                    marginLeft="4"
                    minWidth="48"
                    textColor="@theme/font/grey"
                    fontSize="16"/>
        </brls:Box>

        <brls:Box>
            <SVGImage
                    id="comment/svg/like"
                    width="24"
                    height="24"
                    SVG="@res/svg/comment-agree-grey.svg"/>
            <brls:Label
                    id="comment/label/like"
                    marginLeft="4"
                    minWidth="48"
                    textColor="@theme/font/grey"
                    fontSize="16"/>
        </brls:Box>

    </brls:Box>
</brls:Box>
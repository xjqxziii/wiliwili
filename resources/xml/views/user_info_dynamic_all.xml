<brls:Box
        width="auto"
        height="auto"
        axis="row"
        alignItems="center">

    <brls:Rectangle
            id="notice"
            width="8"
            height="8"
            cornerRadius="8"
            marginLeft="10"
            visibility="invisible"
            color="@theme/color/tip/red"/>

    <brls:Box
            width="40"
            height="40"
            margin="10"
            cornerRadius="100"
            alignItems="center"
            justifyContent="center"
            backgroundColor="@theme/color/bilibili">
        <SVGImage
                id="avatar"
                width="24"
                height="24"
                scalingType="fit"
                SVG="@res/svg/ico-dynamic-hollow.svg"/>
    </brls:Box>

    <brls:Label
            id="username"
            width="auto"
            height="auto"
            singleLine="true"
            fontSize="18"
            text="@i18n/wiliwili/activity/all"/>

</brls:Box>
<brls:Box
        wireframe="false"
        highlightCornerRadius="8"
        axis="row"
        width="auto"
        height="auto">
    <brls:Box
            id="video/card/pic_box"
            width="40%"
            height="100%">
        <brls:Image
                id="video/card/picture"
                scalingType="fill"
                height="100%"
                width="40%"
                image="@res/pictures/video-card-bg.png"
                cornerRadius="4"/>

        <brls:Box
                positionBottom="0"
                positionType="absolute"
                background="vertical_linear"
                paddingLeft="10"
                paddingRight="10"
                width="100%"
                height="20%"
                alignItems="center">
            <brls:Label
                    id="video/card/label/duration"
                    positionType="absolute"
                    positionRight="2"
                    textColor="#FFFFFF"
                    fontSize="16"/>
        </brls:Box>

        <brls:Box
                id="video/card/box/charging"
                positionTop="4"
                positionRight="4"
                positionType="absolute"
                paddingLeft="10"
                paddingRight="10"
                width="84"
                height="20"
                cornerRadius="4"
                visibility="gone"
                backgroundColor="@theme/color/bilibili">
            <SVGImage
                    marginTop="2"
                    height="17"
                    width="16"
                    positionType="absolute"
                    positionLeft="4"
                    SVG="@res/svg/charging-icon.svg"/>
            <brls:Label
                    id="video/card/label/duration"
                    positionType="absolute"
                    positionLeft="20"
                    positionTop="2"
                    textColor="#FFFFFF"
                    fontSize="14"
                    text="充电专属"/>
        </brls:Box>

    </brls:Box>
    <brls:Box
            grow="1"
            wireframe="false"
            marginTop="10"
            marginLeft="8"
            marginRight="4"
            axis="column">
        <TextBox
                marginBottom="0"
                id="video/card/label/title"
                fontSize="18"
                lineHeight="1.5"
                maxRows="2"
                wireframe="false"
                width="100%"
                height="53"/>
        <brls:Box
                wireframe="false"
                grow="1"
                width="100%"
                height="20"
                marginLeft="2"
                alignItems="center">
            <SVGImage
                    marginTop="2"
                    height="14"
                    SVG="@res/svg/widget-up.svg"/>
            <brls:Label
                    id="video/card/label/username"
                    fontSize="16"
                    marginLeft="4"
                    singleLine="true"
                    wireframe="false"
                    textColor="@theme/font/grey"/>
        </brls:Box>
        <brls:Box
                alignItems="center"
                height="20"
                wireframe="false">
            <SVGImage
                    width="16"
                    height="16"
                    SVG="@res/svg/widget-video-play-count-grey.svg"/>
            <brls:Label
                    marginLeft="4"
                    marginRight="4"
                    textColor="@theme/font/grey"
                    id="video/card/label/count"
                    fontSize="14"/>
            <SVGImage
                    width="16"
                    height="16"
                    SVG="@res/svg/widget-video-danmaku-grey.svg"/>
            <brls:Label
                    marginLeft="4"
                    marginRight="4"
                    textColor="@theme/font/grey"
                    id="video/card/label/danmaku"
                    fontSize="14"/>
        </brls:Box>
    </brls:Box>
</brls:Box>
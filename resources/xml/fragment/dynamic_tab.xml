<brls:Box
        axis="row"
        width="auto"
        height="auto">
    <RecyclingGrid
            width="270"
            paddingLeft="10"
            paddingRight="10"
            marginTop="20"
            marginBottom="8"
            itemHeight="50"
            preFetchLine="2"
            spanCount="1"
            wireframe="false"
            lineColor="@theme/color/line"
            lineRight="1"
            id="dynamic/up/recyclingGrid"/>
    <AutoTabFrame
            id="dynamic/tab/frame"
            demandMode="false"
            paddingBottom="8"
            grow="1"
            defaultTab="0"
            tabHeight="70"
            tabItemActiveTextColor="@theme/color/bilibili"
            disableNavigationRight="true"
            sidebarPosition="top">

        <Tab label="@i18n/wiliwili/dynamic/video"
             fontSize="22">
            <RecyclingGrid
                    paddingLeft="20"
                    paddingRight="20"
                    itemHeight="250"
                    grow="1"
                    preFetchLine="2"
                    spanCount="@style/wiliwili/grid/span/3"
                    wireframe="false"
                    id="dynamic/videoList"/>
        </Tab>
        <Tab label="@i18n/wiliwili/dynamic/article"
             fontSize="22">
            <RecyclingGrid
                    paddingLeft="18%"
                    paddingRight="18%"
                    grow="1"
                    preFetchLine="2"
                    spanCount="1"
                    flowMode="true"
                    itemHeight="1000"
                    wireframe="false"
                    id="dynamic/articleList"/>
        </Tab>
    </AutoTabFrame>
</brls:Box>